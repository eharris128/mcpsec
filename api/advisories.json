---
layout: null
---
{
  "version": "1.0",
  "site": {
    "name": "{{ site.title }}",
    "url": "{{ site.url }}",
    "description": "{{ site.description }}",
    "author": "{{ site.author }}"
  },
  "advisories": [
    {% for advisory in site.advisories reversed %}
    {
      "id": "{{ advisory.url | replace: '/advisories/', '' | replace: '/', '' }}",
      "title": "{{ advisory.title | jsonify }}",
      "url": "{{ site.url }}{{ advisory.url }}",
      "date": "{{ advisory.date | date: '%Y-%m-%d' }}",
      "datePublished": "{{ advisory.date | date_to_xmlschema }}",
      "categories": {{ advisory.categories | jsonify }},
      "excerpt": {{ advisory.excerpt | strip_html | jsonify }},
      "content": {{ advisory.content | jsonify }},
      "wordCount": {{ advisory.content | number_of_words }},
      "author": {
        "name": "{{ site.author }}",
        "url": "{{ site.url }}/about/"
      }
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "totalAdvisories": {{ site.advisories.size }},
  "lastUpdated": "{{ site.time | date_to_xmlschema }}"
}
